<hr>
<h2>Comments</h2>
<% @article.comments.each do |comment| %>
<p>
	<strong>Commenter:</strong>
	<%= comment.commenter %>
</p>
<p>
	<%= comment.created_at %>
</p>
<p>
	<strong>Comment</strong>
	<%= truncate(comment.body, length: 300) %>
</p>
<p>
	<%= link_to "Delete comment", [comment.article,comment], 
								   method: :delete,
								   data: {confirm: "Are you sure?"} %>
</p>
<% end %> 