<div class="row">
<div class="col"></div>
<div class="col-md-7">

<p>
<h2> TITLE: </h2><br>
<strong><%= @article.title %></strong><br>
</p>

<p>
	<%= @article.created_at.strftime('%A %-b %-d, %Y | %l.%M %p') %>
</p>

<p>
<h3> ARTICLE: </h3><br>
	<%= @article.text %>
</p>

<%= render 'comments/comment' %>

<% if current_user %>
<hr>
<%= render 'comments/form' %>
<% else %>
Please <%= link_to 'Sign In', new_session_path %> or <%= link_to 'Sign Up', new_user_path %> to create a comment

<% end %>
<p>
	<%= link_to 'Back', articles_path, class: "btn btn-info btn-sm" %>
	<%= link_to "Home", root_path, class: "btn btn-primary btn-sm" %>
</p>

</div><!-- .col-md-10 -->
<div class="col"></div>
</div><!-- row -->