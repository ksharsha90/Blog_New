<div class="row" style="padding-top: 10%">
<div class="col"></div>
<div class="col-md-10">

<h1>Create a New Article!</h1>

<%= form_for :article , url: articles_path do |f| %>
<div class="field" style="100%;">

<!--Checking for Errors!! -->

<% if @article.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@article.errors.count, "errors") %>
			Prohinibited this article from being saved:
		</h2>
		<p>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li> 
						<%= msg %>
					</li>
				<% end %>
			</ul>
		</p>
	</div>
</div>
<% end %>



<p>
	<%= f.label :title %><br>
	<%= f.text_field :title,class: "form-control" %>
</p>
<p>
	<%= f.label :text %><br>
	<%= f.text_area :text,class: "form-control" %>
</p>
<p>
	<%= f.submit class: "btn btn-success btn-lg"%>
</p>
<p>
	<%= link_to 'Back', articles_path, class: "btn btn-info btn-md" %> 
	<%= link_to "Home", root_path, class: "btn btn-primary btn-md" %>
</p>

<% end %>
</div><!-- .col-md-10 -->
<div class="col"></div>
</div><!-- row -->