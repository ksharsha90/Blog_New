<div class="row" style="padding-top: 0%;">
	<div class="col"></div>
	<div class="col-md-4">
		<h1>Create an Account!</h1>

	<%= form_for @user do |f| %>
		<div class="field" style="100%;">
			<% if @user.errors.any? %>
				<div id="error-explanation">
					<h2>
						<%= pluralize(@user.errors.count, "errors") %>
								Prohinibited this article from being saved:
					</h2>
					<p>
						<ul>
							<% @user.errors.full_messages.each do |msg| %>
							<li>
								<%= msg %>
							</li>
							<% end %>
						</ul>
					</p>
					<% if alert %>
					<%= alert %>
					<% end %>
					</div>
			
		
	<% end %><!-- end for checking users -->

	<%= f.text_field :userid, placeholder: "Enter your userID", class: "form-control" %>
	<%= f.email_field :email, placeholder: "Enter your email", class: "form-control" %>
	<%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
	<%= f.password_field :password_confirmation, placeholder: "confirm password", class: "form-control" %>
	<%= f.submit "Create Account" %>
 
	<% end %>
</div>


	<p>
		<%= link_to 'Articles', articles_path, class: "btn btn-md btn-info" %>
		<%= link_to 'Home', root_path, class: "btn btn-md btn-primary" %>
	</p>
	</div>
	<div class="col"></div>
</div>
